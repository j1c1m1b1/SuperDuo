<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.jaschke.alexandria.fragments.BookDetail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        >

        <android.support.v7.widget.GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingEnd="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingStart="32dp"
            android:paddingTop="16dp"
            app:columnCount="2"
            app:orientation="vertical"
            app:rowCount="6">

            <android.support.v7.widget.Space
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <!--Row 1-->

            <TextView
                android:id="@+id/fullBookTitle"
                android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
                android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textIsSelectable="true"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="1"
                tools:text="Hello Book"
                />

            <!--Row 2-->

            <TextView
                android:id="@+id/fullBookSubTitle"
                android:ellipsize="end"
                android:maxLines="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/text_gray"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="2"
                tools:text="Hello Book"/>

            <ImageView
                android:id="@+id/fullBookCover"
                android:layout_width="0dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/book_cover"
                android:maxHeight="240dp"
                android:maxWidth="120dp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="3"
                tools:src="@drawable/ic_launcher"/>

            <TextView
                android:id="@+id/fullBookDesc"
                android:layout_width="0dp"
                android:ellipsize="end"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="3"
                tools:text="Lorem ipsum dolor sit amet, mea sale fastidii reformidans id. Id ludus choro regione ius, aeque exerci soleat sit ex. Ex utinam docendi pri, novum nobis praesent ne sed. Vis moderatius argumentum assueverit in."
                />

            <!--Row 3-->


            <TextView
                android:id="@+id/categories"
                android:layout_width="0dp"
                android:gravity="start"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="4"/>

            <TextView
                android:id="@+id/authors"
                android:layout_width="0dp"
                android:gravity="end"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:layout_row="4"
                />

            <android.support.v7.widget.Space
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_row="5"
                app:layout_rowWeight="1" />
        </android.support.v7.widget.GridLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/delete_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_discard"
            android:drawableStart="@drawable/ic_action_discard"
            android:text="@string/delete"/>
    </LinearLayout>
</LinearLayout>
